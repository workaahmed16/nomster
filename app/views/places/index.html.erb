<meta name="viewport" content="width=device-width, initial-scale=1.0">
<!-- Carousal Start -->

<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">

    <!-- Slide 1 -->
    <div class="item active">
      <%= image_tag 'slider1.jpg', class: 'img-rounded', class: 'img-responsive' %>
        <div class="carousel-caption">
          Find the best place to shop!
      </div>
    </div>

    <!-- Slide 2 -->
    <div class="item">
      <%= image_tag 'slider2.jpg', class: 'img-rounded', class: 'img-responsive' %>
        <div class="carousel-caption">
          Grab a bite from some place!
        </div>
    </div>

    <!-- Slide 3 -->
    <div class="item">
      <%= image_tag 'slider3.jpg', class: 'img-rounded', class: 'img-responsive' %>
        <div class="carousel-caption">
          Looking for Sandwiches?
        </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>

<!-- Carousel End -->






<% @places.each do |place| %>
  <div class ="booyah-box col-xs-10 col-xs-offset-1">
    <h1><%= link_to place.name, place_path(place) %></h1><br />
    <h1><%= place.name %></h1>
    <i><%= place.address %></i><br /><br />
    <p><%= place.description %></p><br />

      <% if place.user.present? %>
        <small><%= place.user.email %></small>
      <% end %>
<% if place.comments.present? %>
  <div class="col-xs-12">
    <blockquote>
      <% if place.comments.last.humanized_rating.present? %>
      <b><%= place.comments.last.humanized_rating %></b> -
      <% end %>

      <%= place.comments.last.message %>

      <small><%= place.comments.last.user.email %></small>
    </blockquote>
  </div
<% end %>
  </div>
<% end %>

